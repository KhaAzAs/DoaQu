<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:paddingTop="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_navbar_app_icon"
        android:layout_toEndOf="@id/splash_app_title"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/splash_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorPrimaryContent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/splash_app_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_dist"
        android:textColor="@color/colorPrimaryContent"
        android:layout_below="@id/splash_app_title"
        android:layout_alignStart="@id/splash_app_title"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>